            "date": 1753761415563,
            "name": "Commit-0",
            "content": "<!DOCTYPE html>\r\n<html lang=\"vi\">\r\n<head>\r\n  <meta charset=\"UTF-8\">\r\n  <title>Upload Flipbook với Heyzine</title>\r\n  <style>\r\n    body {\r\n      font-family: sans-serif;\r\n      padding: 20px;\r\n    }\r\n    iframe {\r\n      width: 100%;\r\n      height: 600px;\r\n      margin-top: 20px;\r\n      border: none;\r\n    }\r\n  </style>\r\n</head>\r\n<body>\r\n\r\n  <h2>Tạo Flipbook từ PDF</h2>\r\n  \r\n  <input type=\"file\" id=\"pdfFile\" accept=\"application/pdf\" />\r\n  <button onclick=\"uploadFlipbook()\">Tải lên</button>\r\n\r\n  <div id=\"loading\" style=\"display:none;\">Đang tải lên...</div>\r\n  <div id=\"result\"></div>\r\n\r\n  <script>\r\n    async function uploadFlipbook() {\r\n      const fileInput = document.getElementById(\"pdfFile\");\r\n      const file = fileInput.files[0];\r\n\r\n      if (!file) {\r\n        alert(\"Vui lòng chọn một file PDF.\");\r\n        return;\r\n      }\r\n\r\n      document.getElementById(\"loading\").style.display = \"block\";\r\n\r\n      const formData = new FormData();\r\n      formData.append(\"file\", file);\r\n\r\n      try {\r\n        const response = await fetch(\"https://api.heyzine.com/v1/flipbooks\", {\r\n          method: \"POST\",\r\n          headers: {\r\n            \"Authorization\": \"5ed8e59caeca7140e2ef91106805922918d89451.f019775a16596720\"\r\n          },\r\n          body: formData\r\n        });\r\n\r\n        const data = await response.json();\r\n\r\n        document.getElementById(\"loading\").style.display = \"none\";\r\n\r\n        if (data.url) {\r\n          document.getElementById(\"result\").innerHTML = `\r\n            <p><strong>Link flipbook:</strong> <a href=\"${data.url}\" target=\"_blank\">${data.url}</a></p>\r\n            <iframe src=\"${data.url}\"></iframe>\r\n          `;\r\n        } else {\r\n          document.getElementById(\"result\").innerText = \"Lỗi: Không nhận được URL.\";\r\n          console.error(data);\r\n        }\r\n\r\n      } catch (error) {\r\n        document.getElementById(\"loading\").style.display = \"none\";\r\n        alert(\"Đã xảy ra lỗi khi upload.\");\r\n        console.error(error);\r\n      }\r\n    }\r\n  </script>\r\n\r\n</body>\r\n</html>\r\n"
        }
    ]
}